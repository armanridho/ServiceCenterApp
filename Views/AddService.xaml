<Window x:Class="ServiceCenterApp.Views.AddService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Loaded="Window_Loaded"
        Title="Pendaftaran Servis" Height="450" Width="450">
	<Grid Margin="10">
		<StackPanel>

			<TextBlock Text="Nama Customer"/>
			<ComboBox x:Name="cmbCustomer" IsEditable="True" Margin="0,5"/>

			<TextBlock Text="Pilih Unit (Brand - Tipe)"/>
			<ComboBox x:Name="cmbUnit" IsEditable="True" Margin="0,5"/>

			<TextBlock Text="Serial Number"/>
			<TextBox x:Name="txtSerialNumber" Margin="0,5"/>

			<TextBlock Text="Status Warranty"/>
			<ComboBox x:Name="cmbWarranty" Margin="0,5">
				<ComboBoxItem Content="Ya"/>
				<ComboBoxItem Content="Tidak"/>
			</ComboBox>

			<TextBlock Text="Kerusakan"/>
			<TextBox x:Name="txtProblem" Margin="0,5"/>

			<TextBlock Text="Status Servis"/>
			<ComboBox x:Name="cmbStatus" Margin="0,5">
				<ComboBoxItem Content="Masuk"/>
				<ComboBoxItem Content="Service"/>
				<ComboBoxItem Content="Keluar"/>
			</ComboBox>

			<TextBlock Text="Tempat Servis"/>
			<ComboBox x:Name="cmbLocation" IsEditable="True" Margin="0,5"/>

			<TextBlock Text="Kelengkapan Unit"/>
			<TextBox x:Name="txtAccessories" Margin="0,5"/>
			
			<Button Content="Simpan" Click="Save_Click" Margin="0,10"/>
		</StackPanel>
	</Grid>
</Window>
