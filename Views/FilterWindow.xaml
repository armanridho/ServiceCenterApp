<Window x:Class="ServiceCenterApp.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Data" Height="600" Width="400">
	<ScrollViewer>
		<StackPanel Margin="10">

			<!-- Customer Filter with Expander -->
			<Expander Header="Nama Customer" IsExpanded="False">
				<ItemsControl x:Name="CustomerCheckboxes"/>
			</Expander>

			<!-- Item Filter with Expander -->
			<Expander Header="Nama Item" IsExpanded="False">
				<ItemsControl x:Name="ItemCheckboxes"/>
			</Expander>

			<!-- Serial Number Filter with Expander -->
			<Expander Header="Serial Number" IsExpanded="False">
				<ItemsControl x:Name="SerialNumberCheckboxes"/>
			</Expander>

			<!-- Warranty Status Filter with Expander -->
			<Expander Header="Status Warranty" IsExpanded="False">
				<ItemsControl x:Name="WarrantyCheckboxes"/>
			</Expander>

			<!-- Status Filter with Expander -->
			<Expander Header="Status Barang" IsExpanded="False">
				<ItemsControl x:Name="StatusCheckboxes"/>
			</Expander>

			<!-- Location Filter with Expander -->
			<Expander Header="Lokasi" IsExpanded="False">
				<ItemsControl x:Name="LocationCheckboxes"/>
			</Expander>

			<!-- Apply Button -->
			<Button Content="Apply Filter" Click="ApplyFilter_Click" Margin="0,10,0,0" />

		</StackPanel>
	</ScrollViewer>
</Window>